include _links.pug

header.header
        .header__top-box
          .wrapper
            .header__top
              .header__top-location
                include ../assets/img/address-icon.svg 
                .header__top-location-address Россия, Москва, 38КМ МКАД, 6Бс1
                .header__top-working-hours
                  include ../assets/img/working-hours.svg
                  .header__top-working-hours-time Время работы: c 08:00 до 21:00
              .header__top-messager-box
                include ../assets/img/whatsapp.svg
                .header__top-messager Whatsapp
