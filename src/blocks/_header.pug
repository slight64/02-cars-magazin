                nav.header__body-nav
                  +linksList(navLinks,'header__body-nav-list','header__body-nav-list-item','header__body-nav-list-link')
              .header__body-tel-box
                .header__body-tel-1 
                  include ../assets/img/red-tel-icon.svg
                  |+7 (800) 551-94-31
                .header__body-tel-2 +7 (495) 292-18-67
              .header__body-callcback-btn Обратный звонок
            .header__menu
              +btnList(menueItems,'header__menu-list','header__menu-list-item','header__menu-list-btn')
              .header__menu-utility-btns
                .header__menu-utility-favorites
                  include ../assets/img/favorites-icon.svg
                  .header__menu-utility-favorites__counter 10
                .header__menu-utility-compare
                  include ../assets/img/compare-icon.svg
                  .header__menu-utility-compare__counter 12
                .header__menu-utility-search
                  include ../assets/img/search-icon.svg