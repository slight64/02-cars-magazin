mixin promotionalCards(cardClass, path, alt)
  div(class=cardClass+'-'+'card-wrapper')
    img(class=cardClasss+'-'+'image' src=path, alt=alt)
    div(class=cardClass+'-'+'card-bottom')
      div(class=cardClass+'-'+'card-text')
      button(class=cardClass+'-'+'card-button')

section.promotional
  .wrapper
    .promotional__top
      h2.promotional__title
      buttons.promotional__btns-all
      buttons.promotional__left-slider
      buttons.promotional__right-slider
    +promotionalCards('promotional__','./assets/img/promotion-1.jpg','promotion')
    +promotionalCards('promotional__','./assets/img/promotion-2.jpg','promotion')
    +promotionalCards('promotional__','./assets/img/promotion-3.jpg','promotion')